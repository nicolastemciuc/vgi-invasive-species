<div class="flex justify-center mt-4">
  <div class="flex flex-col min-w-md">
    <h2 class="text-3xl font-bold mb-6 text-center">¿Olvidaste tu contraseña?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6 my-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex flex-col">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input w-full" %>
      </div>

      <%= f.submit "Enviarme instrucciones para restablecer la contraseña", class: "btn btn-primary w-full" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
