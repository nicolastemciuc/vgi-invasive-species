<div class="flex justify-center mt-4">
  <div class="flex flex-col w-full mx-6 sm:max-w-md">
    <h2 class="text-3xl font-bold mb-6 text-center">Cambiar tu contraseña</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6 my-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="flex flex-col">
        <%= f.label :password, "Nueva contraseña", class: "label" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input w-full" %>
        <% if @minimum_password_length %>
          <label class="label">
            <span class="label-text-alt"><%= @minimum_password_length %> caracteres mínimo</span>
          </label>
        <% end %>
      </div>

      <div class="flex flex-col">
        <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input w-full" %>
      </div>

      <%= f.submit "Cambiar mi contraseña", class: "btn btn-primary w-full" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
