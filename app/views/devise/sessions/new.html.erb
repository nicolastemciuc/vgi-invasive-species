<div class="flex justify-center mt-4">
  <div class="flex flex-col w-full mx-6 sm:max-w-md">
    <h2 class="text-3xl font-bold mb-6 text-center">Iniciar sesi√≥n</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6 my-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex flex-col">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input w-full" %>
      </div>

      <div class="flex flex-col">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input w-full" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "checkbox" %>
          <%= f.label :remember_me, class: "label ms-2" %>
        </div>
      <% end %>

      <%= f.submit "Log in", class: "btn btn-primary w-full" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
