<div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100 mx-4">
  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Email</th>
        <th>Role</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Reset Password Sent At</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th><%= user.id %></th>
          <td><%= user.email %></td>
          <td><%= user.role.titleize %></td>
          <td><%= user.created_at.to_fs %></td>
          <td><%= user.updated_at.to_fs %></td>
          <td><%= user.reset_password_sent_at ? user.reset_password_sent_at.to_fs : "â€”" %></td>
          <td class="flex">
            <%= link_to 'Edit', edit_admin_user_path(user), class: "btn btn-sm btn-outline mr-2" %>
            <%= button_to 'Delete', admin_user_path(user), method: :delete, class: "btn btn-sm btn-error" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
