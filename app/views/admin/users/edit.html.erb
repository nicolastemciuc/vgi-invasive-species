<div class="flex justify-center mt-4">
  <div class="flex flex-col min-w-md">
    <h2 class="text-3xl font-bold mb-6 text-center">Editar User</h2>

    <%= form_with model: [:admin, @user], local: true, html: { class: "space-y-6 my-4" } do |f| %>
      <div class="flex flex-col">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input w-full" %>
      </div>

      <div class="flex flex-col">
        <%= f.label :role, class: "label" %>
        <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: "select select-bordered" %>
      </div>

      <%= f.submit "Actualizar", class: "btn btn-primary w-full" %>
    <% end %>
  </div>
</div>
